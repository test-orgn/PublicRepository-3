<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "https://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost/ovchip</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">kip123</property>
        <mapping class="nl.hu.dp.ovchip.domain.ReizigerEntity"/>
        <mapping class="nl.hu.dp.ovchip.domain.AdresEntity"/>
        <mapping class="nl.hu.dp.ovchip.domain.OvEntity"/>
        <mapping class="nl.hu.dp.ovchip.domain.ProductEntity"/>
        <mapping class="nl.hu.dp.ovchip.domain.LinkOvProduct"/>
    </session-factory>
</hibernate-configuration>